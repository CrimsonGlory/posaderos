        <?php echo Form::text('name', $user->name, ['class' => 'form-control']); ?>

        <?php echo e($errors->first('name')); ?>

    </div>
    <div class="form-group">
        <?php echo Form::label('surname', 'Apellido:'); ?>

        <?php echo Form::text('surname', $user->surname, ['class' => 'form-control']); ?>

        <?php echo e($errors->first('surname')); ?> 
    </div>

    <div class="form-group">
        <?php echo Form::label('email', 'Email:'); ?>

        <?php echo Form::text('email', $user->email, ['class' => 'form-control']); ?>

        <?php echo e($errors->first('email')); ?>

    </div>

    <div class="form-group">
        <?php echo Form::label('birthDate', 'Fecha de nacimiento:'); ?>

        <?php echo Form::text('birthDate', $user->birthDate, ['class' => 'form-control']); ?>

        <?php echo e($errors->first('birthDate')); ?>

    </div>

    <div class="form-group">
        <?php echo Form::label('gender','Sexo:'); ?>

        <?php echo Form::select('gender', array('male' => 'Hombre', 'female' => 'Mujer'), $user->gender); ?>

        <?php echo e($errors->first('gender')); ?>

    </div>
    <div class="form-group">
        <?php echo Form::label('address', 'Direccion:'); ?>

        <?php echo Form::text('address', $user->address, ['class' => 'form-control']); ?>

        <?php echo e($errors->first('address')); ?>

    </div>
    <div class="form-group">
        <?php echo Form::label('dni', 'DNI:'); ?>

        <?php echo Form::text('dni', $user->dni, ['class' => 'form-control']); ?>

        <?php echo e($errors->first('dni')); ?>

    </div>

    <div class="form-group">
        <?php echo Form::submit('Guardar', ['class' => 'btn btn-primary form-control']); ?>

    </div>

    <?php echo Form::close(); ?>


<?php $__env->stopSection(); ?>
<?php echo $__env->make('app', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>