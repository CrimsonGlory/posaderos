                                </th>
                                <th><?php echo e($person->dni); ?></th>
                                <th>
                                    <?php if($person->birthdate != null): ?>
                                        <?php echo e(date_diff(date_create($person->birthdate), date_create('today'))->y); ?>

                                        <?php echo e(trans('messages.years')); ?>

                                    <?php endif; ?>
                                </th>
                                <th><?php echo e($person->address); ?></th>
                                <th><?php echo e($person->phone); ?></th>
                                <th>
                                    <?php if(count($person->tagNames()) > 0): ?>
                                        <?php echo $__env->make('tag.list_tags',['tagNames' => $person->tagNames()], array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
                                    <?php endif; ?>
                                </th>
                            </tr>
                        <?php endforeach; ?>
                        </tbody>
                    </table>
                </div>
