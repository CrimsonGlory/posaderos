<?php if(count($people)): ?>
    <?php if(Agent::isDesktop()): ?>
        <div id="collapseOne" class="panel-collapse collapse in">
            <div class="panel-body">
                <div class="form-group">
                    <table class="table table-striped">
                        <thead>
